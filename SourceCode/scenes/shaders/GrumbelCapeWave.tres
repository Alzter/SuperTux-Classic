[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;
render_mode blend_mix;

uniform vec2 wave_strength = vec2(0.05, 0.03);
uniform vec2 wave_amplitude = vec2(15f, 20f);
uniform vec2 wave_speed = vec2(15f, 10f);

void fragment() {
	vec2 disp;
	disp.x = sin((UV.y * wave_amplitude.x) + TIME * wave_speed.x) * wave_strength.x;
	disp.y = sin((UV.x * wave_amplitude.y * -1f) + TIME * wave_speed.y) * wave_strength.y;
	disp *= (1f - UV.y);
	vec2 uv = UV + disp;
	COLOR = texture(TEXTURE, uv);
}"
